// Compile Template in "./theme" directory for correct images and js paths
- loremBigText = File.open("haml/lorem.txt").read
- headerPic = ["./img/pics/header/pic1.jpg", "./img/pics/header/pic2.jpg", "./img/pics/header/pic5.jpg"]
- news = [Array({"img" => "./img/pics/temp/news/news-1.png"}), Array({"img" => "./img/pics/temp/news/news-2.png"}), Array({"img" => "./img/pics/temp/news/news-3.png"}), Array({"img" => "./img/pics/temp/news/news-4.png"})]
- socNet = ["fa-twitter-square", "fa-facebook-square", "fa-linkedin-square", "fa-github-square", "fa-vimeo-square"]
- projImg = ["earth", "html5", "notes", "rocket"]
- aboutMe = "about.me/artem.deykun"

!!! 5
%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title ArtemHP-Theme
    %link(rel="stylesheet" href="./css/app.css")
    %script(src="./public/angular/angular.min.js")
  %body
    %header.header
      %input(type="text" class="search")
      .aSlider(data-aSlider)
        %li
          %img(src="./img/pics/header/pic5.jpg")
    %main
      %div.contain-to-grid
        %nav.top-bar(data-topbar)
          %ul.title-area
            %li.name
            %li.toggle-topbar.menu-icon
              %a(href="#")
                %span Lorem
          %section.top-bar-section
            %ul
              %li
                %a(href="#") Lorem
              %li.has-dropdown
                %a(href="#") Doloremque
                %ul.dropdown
                  - for i in 1..6
                    %li
                      %a.top-bar-section-link Lorem #{i}
              %li
                %a(href="#") Lorem
      %section#article
        .row.top-article
          %div.small-2.medium-2.large-1.columns
            %div.top-article-date
              %span.fa-bookmark.fa
              %div.day 16
              %div.month JAN
              %div.year 1991
          %div.small-10.medium-6.large-6.columns
            %h1.top-article-title
              %a(href="#") Lorem ipsum dolor sit amet, consectetur
            %div.top-article-content
              %p=loremBigText
          %div.medium-4.large-5.hide-for-small-only.columns
            %img.th(src="./img/pics/temp/top-article.png")
      %section#news
        %div.blue-title
          %div.row
            %h1
              %span.fa-lightbulb-o.fa
              Asperiores, nulla praesentium
        %div.row.last-notes
          %div.small-12.columns
            %ul.large-block-grid-2.medium-block-grid-1
              - news.each do |news|
                %li
                  %article
                    %h3.last-notes-title
                      %a Illum, omnis, tempora
                    %div.last-notes-date
                      %span.fa-calendar.fa
                      16.01.1991
                      %span.fa-user.fa
                      Ipsum laboriosam
                    %div.row
                      %div.hide-for-small-only.medium-3.column
                        %div.last-notes-img
                          %a.th
                            %img(src="./img/pics/temp/news/news-1.png")
                      %div.small-12.medium-9.column.last-notes-content
                        %p=loremBigText
      %section#info
        %div.blue-title
          %div.row
            %h1
              %span.fa-user.fa
              Ipsum laboriosam, optio
        %div.row
          %div.small-12.large-3.column
            %div.personal-photo
              %img.th(src="./img/pics/photo/krit-portrait.jpg")
            %div.social-networks.text-center
              - socNet.each do |soc|
                %a(href="#")
                  %span(class="#{soc} fa")
          %div.small-12.large-9.column
            - for i in 1..3
              %p=loremBigText
            %p.text-right
              %a(href="http://#{aboutMe}") #{aboutMe}
      %section#promo
        %div.row.promo-banners
          - projImg.each do |img|
            %div.small-6.medium-6.large-3.column.text-center
              %a.promo-link(href="#")
                %div.promo-picture
                  %img(src="./img/pics/promo/#{img}.png")
                %h3 Lorem ipsum
      %section#quote
        %div.row
          %div.small-centered.columns.small-12.medium-8.wrap-quote
            %blockquote
              %p=loremBigText
              %footer Lorem ipsum dolor
    %footer.footer
      %div.row.footer-menu-wrap
        - for i in 1..4
          %div.columns.small-6.large-3
            %h2.lorem1.footer-menu-title Lorem
            %ul.footer-menu
              - for i in 1..4
                %li
                  %a(href="#") Lorem Ipsum
      %div.row.text-right
        %span.copyright(data-reveal-id="myModal")
          Template developed by Artem Deykun &copy; 2014
    %div.reveal-modal(id="myModal" data-reveal)
      %h2 Lorem Ipsum
      %div.reveal-modal-scroll
        - for i in 1..5
          %p #{loremBigText}
  %script(src="./js/scripts.min.js")